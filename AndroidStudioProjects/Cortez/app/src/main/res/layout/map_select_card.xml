<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_select_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dip"
    card_view:cardBackgroundColor="@color/backgroundTransparency"
    card_view:theme="@style/AppTheme.MapSelectActivity"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/map_select_card_title"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:background="@color/bkg_card"
            android:text="@string/cortezMapNameDefault"
            android:paddingStart="16dip"
            android:paddingEnd="16dip"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/map_select_card_mapicon"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:paddingStart="16dip"
            android:paddingEnd="16dip"
            android:src="@mipmap/logo"
            android:layout_below="@+id/map_select_card_txtDescription"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/map_select_card_txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:paddingStart="16dip"
            android:paddingEnd="16dip"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:layout_below="@id/map_select_card_title"
            android:layout_marginTop="10dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_select_card_txtDescriptionMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapSelectCardDescriptionDefault"
            android:paddingStart="16dip"
            android:paddingEnd="16dip"
            android:paddingBottom="16dip"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_alignTop="@+id/map_select_card_txtDescription"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/map_select_card_txtDescription" />

    </RelativeLayout>

</android.support.v7.widget.CardView>